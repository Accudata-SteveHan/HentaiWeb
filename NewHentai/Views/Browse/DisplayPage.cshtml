                        {
                            <td width="20%">
                                <p>@row3["NAME_DISPLAY"].ToString()</p>
                            </td>

                        }
                        else
                        {
                            <td width="20%"></td>

                        }

                        if (row4 != null)
                        {
                            <td width="20%">
                                <p>@row4["NAME_DISPLAY"].ToString()</p>
                            </td>

                        }
                        else
                        {
                            <td width="20%"></td>

                        }

                        if (row5 != null)
                        {
                            <td width="20%">
                                <p>@row5["NAME_DISPLAY"].ToString()</p>
                            </td>

                        }
                        else
                        {
                            <td width="20%"></td>

                        }

                    }
                </tr>

            }

        }

    </table>

</div>
