@{
    string tag = ViewData["TAG_ID"].ToString();
    string lang = ViewData["LANG"].ToString();
    string type = ViewData["TYPE"].ToString();
    string page = ViewData["PAGE"].ToString();
    string param = ViewData["PARAM"].ToString();
    int maxKey = int.Parse(ViewData["MAX"].ToString()) * (-1);
    int minKey = int.Parse(ViewData["MIN"].ToString());
    string viewKey = ViewData["KEY"].ToString();

    string baseUrl = System.Configuration.ConfigurationManager.AppSettings["BasePage"].ToString();
    string url = "";

}

<div style="height:5%;">
    <table width="60%" align="center" border="1">
        <tr>
            <td width="33%" align="center">
                @{
                    if (int.Parse(page) - 1 >= 0)
                    {
                        int prevPage = int.Parse(page) - 1;
                        url = baseUrl + "/MelonShow/MelonBookTag/" + viewKey + "/" + @tag + "/" + @type + "/" + @lang + "/" + @prevPage + "/" + @maxKey;
                        <a href="@url" target="_parent">PREV</a>

                    }
                }
            </td>
            <td width="33%" align="center">
                @{
                    int displayPage = int.Parse(page) + 1;
                    url = baseUrl;
                }
                <a href="@url" target="_parent">PAGE @displayPage</a>
            </td>
            <td align="center">
                @{
                    int nextPage = int.Parse(page) + 1;
                    url = baseUrl + "/MelonShow/MelonBookTag/" + viewKey + "/" + @tag + "/" + @type + "/" + @lang + "/" + @nextPage + "/" + @minKey;
                    <a href="@url" target="_parent">NEXT</a>
                }
            </td>

        </tr>
    </table>

</div>
<div style="height:95%;">
    @{
        url = baseUrl + "/MelonShow/MelonBookTagPage/" + viewKey + "/" + @tag + "/" + @type + "/" + @lang + "/" + @page + "/" + @param;
        <iframe width="100%" height="100%" src="@url"></iframe>
    }
</div>